<%- include("partials/header") -%>
<h1>Compose</h1>
<form method="post" action="/compose">
    <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="postTitle">
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea name="postBody" class="form-control" rows="4"></textarea>
  </div>
  <button name="button" type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer") -%>